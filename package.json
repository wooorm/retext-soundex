{
  "name": "retext-soundex",
  "version": "0.0.1",
  "description": "Retext implementation of the Soundex algorithm",
  "keywords": [
    "soundex",
    "retext"
  ],
  "license": "MIT",
  "dependencies": {
    "soundex-code": "^0.0.1"
  },
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "devDependencies": {
    "eslint": "^0.8.0",
    "istanbul": "^0.3.0",
    "jscs": "^1.6.0",
    "mocha": "^1.20.0",
    "retext": "^0.2.0-rc.2",
    "retext-content": "^0.2.2",
    "retext-porter-stemmer": "^0.1.1",
    "retext-visit": "^0.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/retext-soundex.git"
  },
  "scripts": {
    "test": "node_modules/.bin/_mocha --reporter spec --check-leaks -u exports spec/retext-soundex.spec.js",
    "test-travis": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha --report lcovonly -- --reporter spec --check-leaks -u exports spec/retext-soundex.spec.js",
    "lint": "npm run lint-api && npm run lint-test && npm run lint-style",
    "lint-api": "node_modules/.bin/eslint index.js --env node --env browser --rule 'quotes: [2, single]'",
    "lint-test": "node_modules/.bin/eslint spec/retext-soundex.spec.js --env node --env mocha --rule 'quotes: [2, single]'",
    "lint-style": "node_modules/.bin/jscs index.js spec/retext-soundex.spec.js --reporter=inline",
    "install-browser-test": "npm install browserify",
    "build-browser-test": "node_modules/.bin/browserify spec/retext-soundex.spec.js -o spec/browser.spec.js",
    "coverage": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- -- spec/retext-soundex.spec.js",
    "make": "npm run lint && npm run coverage"
  }
}
